generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Producto {
  id          Int      @id @default(autoincrement())
  nombre      String
  descripcion String
  precio      Float
  categoria   String
  imagenes    String[] // array de URLs de Supabase Storage
  tag         String?  // "Nuevo", "Premium", "MÃ¡s vendido"
  stock       Int      @default(0)
  activo      Boolean  @default(true)
  creadoEn    DateTime @default(now())
}